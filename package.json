{
  "name": "ubc-examcal",
  "version": "1.0.0",
  "description": "scrapes UBC exam details",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "deskApp": "concurrently \"npm run server\" \"npm run clientDesk\"",
    "build": "npm install --prefix client && npm run build --prefix client",
    "client": "npm run dev --prefix client",
    "clientDesk": "npm run start --prefix client",
    "server": "nodemon --quiet server.js --ignore 'client/'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krusnabalar/ExamCal"
  },
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.30.0",
    "@sendgrid/mail": "^7.7.0",
    "body-parser": "^1.20.1",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "nodemon": "^2.0.20",
    "playwright": "^1.29.1",
    "webpack-cli": "^5.1.1"
  }
}
